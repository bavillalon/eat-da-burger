<div class="container">
    <div class="jumbotron">
        <h1>Welsome to Eat-Da-Burger!</h1>

        <h4>Enter a name for your burger below and prepare to DEVOUR it.</h4>

        <div>
            <img class='img-fluid' src="/assets/img/homer_burger.jpg">
            <textarea id="newBurger" rows="4" cols="50">

            </textarea>
            <button type="button" id="createBurger" class="btn btn-lg btn-success">
                <h4>Submit to DEVOUR</h4>
            </button>
        </div>

    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers to DEVOUR</h2>

            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                <li class="burger" data-id={{id}}>
                    {{burger_name}}
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-md-6">
            <h2>Burgers you DEVOURED</h2>

            <ol>
                {{#each burgers}}
                {{#if devoured}}
                <li class="burger" data-id={{id}}>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
</div>